<tr>
  <td><%= show_date(timesheet_row.date_worked) %></td> <!-- Date worked -->
  <td><%= show_time(timesheet_row.time_in) %></td>     <!-- Time clocked in -->
  
  <!-- If the user is currently clocked out, --
    -- display time out and hours worked,    --
    -- otherwise, display nothing.           -->
  <% if clocked_out?(timesheet_row) %>
    <td><%= show_time(timesheet_row.time_out) %></td>
    <td><%= calc_hours(timesheet_row.time_in, timesheet_row.time_out) %></td>
    
    <!-- Add link to edit row -->
    <td class="links"><%= link_to "edit", edit_timesheet_row_path(timesheet_row, user_id: params[:user_id], timesheet_id: params[:id]), class: "something" %></td>
  <% else %>
    <td>-</td>
    <td>-</td>
    <td></td>
  <% end %>
</tr>