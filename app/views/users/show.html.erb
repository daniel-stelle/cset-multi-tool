<% provide(:title, @user.firstName.capitalize + " " + @user.lastName.capitalize) %>
<div class="row">
  <aside class="col-md-6 col-md-offset-3">
    <section class="user_info">
      <h1><%= @user.firstName.capitalize %> <%= @user.lastName.capitalize %></h1>
      <h1><%= @user.email %></h1>
      
      <% if @user.role.tech? %>
        <%= render 'tech' %>
      <% end %>
      
      <% if @user.role.checkout? %>
        <%= render 'checkout' %>
      <% end %>
      
      <% if @user.role.ta_grader? %>
        <%= render 'ta_grader' %>
      <% end %>
      
      <% if @user.role.supervisor? %>
        <div class="role_options">
          <h3>Supervisor</h3>
        </div>
      <% end %>
    </section>
  </aside>
</div>