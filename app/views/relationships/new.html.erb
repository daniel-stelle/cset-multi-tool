<div class='row'>
  <div class='col-md-6 col-md-offset-3'>
    <h1>Add Student to Your List of Workers</h1>
    
    <%= form_for @relationship do |f| %>
    
      <%= f.hidden_field :supervisor_id, supervisor_id: current_user.id %>
      
      <%= f.label :id, 'Student' %>
      <%= f.select :id, options_for_select(@users.map {|s| [s.full_name, s.id]}),
                        {}, {class: 'form-control'} %>
      
      <%= f.submit 'Add Existing User', class: 'btn btn-info' %>
    
    <% end %>
    
    <h2>- OR -</h2>
    
    <div class='center'>
      <%= link_to 'Create New User', 
          new_user_path(supervisor_id: current_user.id),
          class: 'btn btn-primary' %>
    </div>
  </div>
</div>